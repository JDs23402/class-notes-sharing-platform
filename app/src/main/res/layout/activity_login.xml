<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#FBFBFB">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#9900"
        android:textSize="40sp"
        android:background="@drawable/linear_back"/>

    <TextView
        android:id="@+id/signuptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:text="Create account?"
        android:layout_below="@id/login_btn"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupbtn"
        android:text="Signup"
        android:textSize="20sp"
        android:textColor="#003DF3"
        style=""
        android:background="#0000"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="-6dp"
        android:layout_marginStart="230dp" />

    <EditText

        android:id="@+id/login_txt_username"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/login"

        android:layout_marginStart="20dp"

        android:layout_marginTop="60dp"

        android:layout_marginEnd="20dp"

        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/person"
        android:hint="Username"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />
    <EditText

        android:id="@+id/login_txt_password"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/login_txt_username"

        android:layout_marginStart="20dp"

        android:layout_marginTop="60dp"

        android:layout_marginEnd="20dp"

        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/lock"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />
    <Button

        android:id="@+id/login_btn"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/login_txt_password"

        android:layout_marginStart="20dp"

        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        android:textSize="25sp" />




</RelativeLayout>